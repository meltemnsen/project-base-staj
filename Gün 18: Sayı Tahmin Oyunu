# Gün 18: Sayı Tahmin Oyunu
import random

def tahmin_oyunu():
    gizli_sayi = random.randint(1, 100)
    tahmin = None
    deneme = 0

    print("1 ile 100 arasında bir sayı tahmin et.")

    while tahmin != gizli_sayi:
        try:
            tahmin = int(input("Tahminin: "))
            deneme += 1
            if tahmin < gizli_sayi:
                print("Daha büyük bir sayı gir.")
            elif tahmin > gizli_sayi:
                print("Daha küçük bir sayı gir.")
        except ValueError:
            print("Geçersiz giriş. Lütfen bir sayı gir.")

    print(f"Tebrikler! Sayıyı {deneme} denemede buldun.")

tahmin_oyunu()
